<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/topbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/fg_one_1"
            style="@style/main_ll_home"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    style="@style/style_iv_icon"
                    android:src="@mipmap/icon_main_pandian" />

                <TextView
                    android:id="@+id/ac_check_btnComfirm"
                    style="@style/style_tv_content"
                    android:text="盘点"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/ac_check_ll_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    android:paddingRight="8dp"
                    android:visibility="invisible"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tv1"
                        style="@style/style_tv_tag"
                        android:layout_marginBottom="12dp"
                        android:text="盘点单号  :"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/ac_check_ll_tv_inventory_number"
                        style="@style/style_tv_tag"
                        android:layout_alignBottom="@+id/tv1"
                        android:layout_toEndOf="@+id/tv1"
                        android:text="TextView"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/style_tv_tag"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tv1"
                        android:gravity="center"
                        android:text="截止时间  :"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ac_check_ll_tv_inventory_start_date"
                        style="@style/style_tv_tag"
                        android:layout_alignBaseline="@+id/tv3"
                        android:layout_alignBottom="@+id/tv3"
                        android:layout_toEndOf="@+id/tv3"
                        android:text="TextView"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/dividing_line" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fg_one_2"
            style="@style/main_ll_home"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    style="@style/style_iv_icon"
                    android:src="@mipmap/icon_main_yanshou" />

                <TextView
                    style="@style/style_tv_content"
                    android:text="验收"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/dividing_line" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fg_one_3"
            style="@style/main_ll_home"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    style="@style/style_iv_icon"
                    android:src="@mipmap/icon_main_lingliao" />

                <TextView
                    style="@style/style_tv_content"
                    android:text="出库"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/dividing_line" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fg_one_4"
            style="@style/main_ll_home"
            tools:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    style="@style/style_iv_icon"
                    android:src="@mipmap/icon_main_huanku" />

                <TextView
                    style="@style/style_tv_content"
                    android:text="还库"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/dividing_line" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fg_one_5"
            style="@style/main_ll_home"
            tools:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    style="@style/style_iv_icon"
                    android:src="@mipmap/icon_main_huanku" />

                <TextView
                    style="@style/style_tv_content"
                    android:text="信息采集"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/dividing_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_one_6"
            style="@style/main_ll_home"
            tools:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    style="@style/style_iv_icon"
                    android:src="@mipmap/icon_main_huanku" />

                <TextView
                    style="@style/style_tv_content"
                    android:text="@string/operation_register"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/dividing_line" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>