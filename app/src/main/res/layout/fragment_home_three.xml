<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.easyway.mismclient.ui.login.LoginActivity">

    <RelativeLayout
        android:id="@+id/fg_mine_ll_detail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button5"
            style="@style/Default_ImageView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/fg_mine_EmployeeName"
            style="@style/style_tv_content"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="@color/white" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_default_white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/fg_mine_hrcode"
            style="@style/style_tv_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="TextView" />
    </RelativeLayout>

    <View style="@style/dividing_line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_default_white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/fg_mine_ValidCode"
            style="@style/style_tv_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="TextView" />
    </RelativeLayout>

    <View style="@style/dividing_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_default_white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/fg_mine_HosID"
            style="@style/style_tv_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="TextView" />
    </RelativeLayout>

    <View style="@style/dividing_line" />

    <RelativeLayout
        android:id="@+id/fg_mine_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_default_white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            style="@style/style_tv_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="检测升级" />
    </RelativeLayout>

    <View style="@style/dividing_line" />


    <Button
        android:id="@+id/fg_mine_quit"
        style="@style/style_button"
        android:layout_width="120dp"
        android:layout_marginTop="@dimen/default_margin_large"
        android:text="退出登录" />


</LinearLayout>