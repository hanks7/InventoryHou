<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_left_drawer_layout"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorPrimary"
    android:paddingTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.easyway.mismclient.MainActivity">

        <LinearLayout
            android:id="@+id/fg_mine_ll_detail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <com.easyway.mismclient.view.CircularImageView
                android:id="@+id/button5"
                style="@style/Default_ImageView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/fg_mine_EmployeeName"
                style="@style/style_tv_content"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="@color/white" />
        </LinearLayout>


        <RelativeLayout style="@style/style_slide_menu_relative_layout">

            <TextView
                android:id="@+id/fg_mine_hrcode"
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="TextView" />
        </RelativeLayout>

        <View style="@style/dividing_line" />


        <RelativeLayout style="@style/style_slide_menu_relative_layout">

            <TextView
                android:id="@+id/textView"
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="ValidCode:  " />

            <TextView
                android:id="@+id/fg_mine_ValidCode"
                style="@style/style_tv_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="TextView" />
        </RelativeLayout>

        <View style="@style/dividing_line" />

        <RelativeLayout style="@style/style_slide_menu_relative_layout">

            <TextView
                android:id="@+id/fg_mine_HosID"
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="TextView" />
        </RelativeLayout>

        <View style="@style/dividing_line" />

        <RelativeLayout
            android:id="@+id/fg_mine_update"
            style="@style/style_slide_menu_relative_layout">

            <TextView
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="检测升级" />
        </RelativeLayout>

        <View style="@style/dividing_line" />

        <RelativeLayout
            android:id="@+id/fg_mine_quit"
            style="@style/style_slide_menu_relative_layout">

            <TextView
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="退出登录" />
        </RelativeLayout>

        <View style="@style/dividing_line" />


    </LinearLayout>

</RelativeLayout>