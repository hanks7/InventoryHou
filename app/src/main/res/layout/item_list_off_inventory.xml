<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/item_list_tv_amount_view"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="9dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_16_wrap"
                android:text="供  应  商 : "
                android:textSize="11sp" />

            <TextView
                android:id="@+id/item_list_inventory_tv_supplier"
                style="@style/TextView_16_wrap"
                android:textColor="@color/input_color"
                android:textSize="11sp"
                tools:text="上海怡道有限公司" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_list_ll_realtime_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_list_tv_fact_amount_tag"
                style="@style/TextView_16_wrap"
                android:text="账面数量 : "
                android:textSize="11sp" />

            <TextView
                android:id="@+id/item_list_real_time_amount"
                style="@style/TextView_16_wrap"
                android:textColor="@color/input_color"
                android:textSize="11sp"
                tools:text="112" />
        </LinearLayout>

    </LinearLayout>


    <com.easyway.mismclient.view.AmountView
        android:id="@+id/item_list_tv_amount_view"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        app:btnTextSize="14sp"
        app:btnWidth="36dp"
        app:tvWidth="50dp" />


</RelativeLayout>
