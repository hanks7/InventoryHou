<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.business.UploadImageActivity">

    <com.easyway.mismclient.view.TopBar
        android:id="@+id/topbar"
        style="@style/TopBar"
        app:title="入库上传" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <TextView
                    style="@style/ac_repair_detail_tv_title_style"
                    android:text="产品名称：" />

                <TextView
                    style="@style/ac_repair_detail_tv_content_style"
                    android:text=" 111" />


            </LinearLayout>

            <View style="@style/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <TextView
                    style="@style/ac_repair_detail_tv_title_style"
                    android:text="规格型号：" />

                <TextView
                    style="@style/ac_repair_detail_tv_content_style"
                    android:text="内容" />


            </LinearLayout>

            <View style="@style/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <TextView
                    style="@style/ac_repair_detail_tv_title_style"
                    android:text="批号序列号：" />

                <TextView
                    style="@style/ac_repair_detail_tv_content_style"
                    android:text="内容" />


            </LinearLayout>

            <View style="@style/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <TextView
                    style="@style/ac_repair_detail_tv_title_style"
                    android:text="数量：" />

                <TextView
                    style="@style/ac_repair_detail_tv_content_style"
                    android:text="内容" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <TextView
                    style="@style/ac_repair_detail_tv_title_style"
                    android:text="关联的文件名称：" />

                <TextView
                    android:id="@+id/ac_detail_repair_tv_phone"
                    style="@style/ac_repair_detail_tv_content_style"
                    android:text="18670801569" />


            </LinearLayout>

            <View style="@style/dividing_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="产品故障图片 "
                android:textSize="11sp" />

            <com.easyway.mismclient.view.GridViewForScrollView
                android:id="@+id/ac_detail_repair_gv_photo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:numColumns="3" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>